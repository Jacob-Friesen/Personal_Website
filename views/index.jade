#top

//How to load the correct page on entry
.to_load(id = "#{constant.to_load}")

////
// main box
.menu_container(id = "menu_box")
    .menu_center#menu_center
        - var left = "_left", pages = constant.pages
        - for (var i = 0; i < pages.length; i++)
            - if(i > 0) left = ""
            
            - page_id = pages[i].toLowerCase();
            - if(page_id.split('exp').length > 1) page_id = "experience";
            div(class = "menu_box#{left}", id = "#{page_id}_link")
                .menu_icon(id = "#{page_id}")
                center
                    span.main= pages[i]

//remove hardcoding later
.page_state(id = "home")

.main_box(id = "main_box")

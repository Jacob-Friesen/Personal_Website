#top

//How to load the correct page on entry
.to_load(id = "#{constant.to_load}")

// main box
.menu_container(id = "menu_box")
    .menu_bar(id = "blue")
        - var left = "_left", pages = constant.pages
        - for (var i = 0; i < pages.length; i++)
            - if(i > 0) left = ""
            div(class = "menu_box#{left}", id = "#{pages[i].toLowerCase()}_link")
                .menu_icon(id = "#{pages[i].toLowerCase()}")
                center
                    span.main= pages[i]

//remove hardcoding later
.page_state(id = "home")

.main_box(id = "main_box")

// change page options bar, may have to use fixed positioning due to http://caniuse.com/css-fixed
.page_options
    div.to_top
        a(href="#top") To Top
    .page_options_inner
        span.text_change  Text:
        button.text_change Tiny
        button.text_change Small
        button.text_change Normal
        button.text_change Large
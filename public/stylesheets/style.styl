body
  padding-top: 10px
  font: 30px Helvetica, "Lucida Grande", Arial, sans-serif
  background-color: darkGrey
h1
  padding: 0
  margin: 0
  font: 14px Helvetica, "Lucida Grande", Arial, sans-serif
  font-size: 45px
h4
  font-size: 30px
  
// Windows
div.page_state
  width: 865px
  height: 20px

div.main_box, div.menu_container
  width: 875px
  background-color: white
  border: 2px solid black
  border-radius: 0 0 15px 15px
  z-index: 1
  opacity: 1.0
  
div.menu_container
  border-bottom: 0
  border-radius: 15px 15px 0 0
  
div.menu_bar
  -moz-border-radius: 15px 15px 0 0
  border-radius: 15px 15px 0 0
  /*height: 26px*/
  border: 0 solid black
  border-bottom-width: 2px
  height: 185px
  
  div.menu_box, div.menu_box_left
    float: left
    padding: 10px
    
    div.menu_icon
      border: solid 2px black
      border-radius: 30px
      height: 130px
      width: 140px
    
  div.menu_box_left
    margin-left: 40px
  
div.title_bar
  text-align: center
  width: 100%
  height: 70px
  margin-top: 5px
  margin-bottom: -7px
  
div.text_wrapper
  width: 90%
  text-align: center
  
div.vertical_bullet
  margin: 3.5px 0 12.5px 0
  float: left
  height: 30px
  width: 10px
  background-color: black
  
h3.vertical_title, h4.vertical_title
  padding: 0
  margin: 0 0 15px 0
  float: left
  margin-left: 10px
  background-color: white
  
button.collapser
  float: right
  border: 1px solid black
  height: 130px
  width: 140px
  border: 0px solid black
  //border-radius: 10px
  background-color: white
  font-size: 100px
  
button.small
  height: 50px
  width: 40px
  font-size: 50px
  
// Home specific

div.main_picture
  -moz-border-radius: 15px
  border-radius: 15px
  -moz-box-shadow:inset 0px 0px 5px rgba(0,0,0,1)
  box-shadow:inset 0px 0px 5px rgba(0,0,0,1)
  border: 2px solid black
  width: 90%
  height: 350px
  
img.main_image
  -moz-border-radius: 7px
  border-radius: 7px
  width: 100%
  height: 100%

// Page options bar
div.page_options
  background-color: white
  border-top: 4px solid black
  border-left: 4px solid black
  border-radius: 12px 0 0 0
  
  bottom:0
  right:0
  position: fixed
  
  div.to_top
    float: left
    font-weight: bold
    padding: 22px 10px 25px 10px
    border-right: 4px solid black
    

    
  div.page_options_inner
    float: left
    padding: 7px 5px 7px 10px
    
    span.text_change
      font-weight: bold
      margin-top: 15px
      float: left
    
    button.text_change
      float: left
      margin: 7px
      padding: 7px
      border 2px solid black
      border-radius: 12px
      background-color: white

// Utilities
#home
  background-color: lightBlue
#skills
  background-color: #E5AB47
#experience
  background-color: #C4B891
#demos
  background-color: #98D398;
#blog
  background-color: #A05B5B;

skills_color = #E5AB47

#home_color
  color: lightBlue
#skills_color
  color: skills_color
#skills_border_color
  border-color: skills_color
#experience_color
  color: #C4B891
#demos_color
  color: #98D398;
#blog_color
  color: #A05B5B;

hr
    background-color: black
    height: 3px

hr.clear, .clear, hr.clear.experience
    padding: 0;
    margin: 0;
    clear: both;
  
span.main
  font-weight: bold
  
div.main_picture, div.text_wrapper, div.main_box, div.menu_container, div.page_state,
div.skills.section, div.demos.section
  margin-left: auto
  margin-right: auto
   
.no_margin
  margin 0

.no_padding
  margin: 0
  
.left_align
  text-align: left
  background-color: white

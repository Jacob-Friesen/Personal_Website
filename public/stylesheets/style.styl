body
  padding-top: 10px
  font: 30px "Lucida Grande", Helvetica, Arial, sans-serif
h1
  padding: 0
  margin: 0
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  font-size: 45px
  
// Windows
div.page_state
  width: 895px
  height: 20px

div.main_box, div.menu_container
  width: 900px
  background-color: white
  border: 2px solid black
  border-radius: 0 0 15px 15px
  z-index: 1
  opacity: 1.0
  
div.menu_container
  border-bottom: 0
  border-radius: 15px 15px 0 0
  
div.menu_bar
  -moz-border-radius: 15px 15px 0 0
  border-radius: 15px 15px 0 0
  /*height: 26px*/
  border: 0 solid black
  border-bottom-width: 2px
  height: 185px
  
  div.menu_box, div.menu_box_left
    float: left
    padding: 10px
    
    div.menu_icon
      border: solid 2px black
      border-radius: 30px
      height: 130px
      width: 140px
    
  div.menu_box_left
    margin-left: 40px
  
div.title_bar
  text-align: center
  width: 100%
  height: 70px
  margin-top: 5px
  margin-bottom: -7px
  
div.text_wrapper
  width: 90%
  text-align: center
  
// Home specific

div.main_picture
  -moz-border-radius: 15px
  border-radius: 15px
  -moz-box-shadow:inset 0px 0px 5px rgba(0,0,0,1)
  box-shadow:inset 0px 0px 5px rgba(0,0,0,1)
  border: 2px solid black
  width: 90%
  height: 350px
  
img.main_image
  -moz-border-radius: 7px
  border-radius: 7px
  width: 100%
  height: 100%
  
// Utilities
#home
  background-color: lightBlue
#skills
  background-color: #E5AB47
#experience
  background-color: #C4B891
#demos
  background-color: #98D398;
#blog
  background-color: #A05B5B;

  
span.main
  font-weight: bold
  
div.main_picture, div.text_wrapper, div.main_box, div.menu_container, div.page_state
  margin-left: auto
  margin-right: auto
